<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns:mvc="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    
    <dubbo:application name="03-consumer-web"/>

    <!--指定服务注册中心：zk集群-->
    <dubbo:registry protocol="zookeeper" address="node01:2181,node02:2181,node03:2181"/>

    <!--订阅服务-->
    <dubbo:reference id="someService"
                     interface="com.wangyuxuan.service.SomeService"/>

    <!--注册处理器-->
    <mvc:component-scan base-package="com.wangyuxuan.controller"/>
</beans>